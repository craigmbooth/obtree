# GCP Project Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"

# Application Configuration
service_name = "obtree"
environment  = "prod"
app_name     = "OBTree"

# Database Configuration
db_name = "obtree"
db_user = "obtree_user"

# Scaling Configuration
max_instances = 2

# Container Image
# Leave commented out to use the default hello-world image for initial deployment
# After deployment, update the image using: gcloud run deploy obtree --image=YOUR_IMAGE
# Terraform will ignore subsequent image changes (managed outside of Terraform)
# container_image = "us-central1-docker.pkg.dev/your-project-id/obtree/obtree:latest"

# Initial Admin User (Optional - for automatic bootstrap on first deployment)
# The bootstrap script only creates the admin if the database is empty
# After successful deployment, remove these variables and re-apply to disable bootstrap
# To disable bootstrap after initial deployment, comment out or remove the above lines:
initial_admin_email    = "administrator@redbudsapp.com"
initial_admin_password = "tr33str33str33str33s"


# Custom Domain Configuration (Optional)
# Set your domain here and Terraform will output the DNS records to add
# After applying, run 'terraform output dns_records_instructions' to see required DNS records
custom_domain = "redbudsapp.com" 
